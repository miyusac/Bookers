<%#編集画面の作成%>

<body>
    <div class="main-visual">
        <h1 class="main-visual-title">Editing Book</h1>
        
        <%= form_with model:@blog, local: true do |f| %>
            <h4>Title</h4>
            <%= f.text_field :title %>
            <h4>Body</h4>
            <%= f.text_area :body %>
            
            <%=f.submit 'Update Book' %>
        <% end %>
        
        <%= link_to "Edit", edit_blog_path(@blog) %>
         | 
        <a href="#">Back</a>
    </div>
</body>
