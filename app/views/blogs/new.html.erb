<%#投稿画面と一覧を同じページに%>

<body>
    <div class= "main-visual" >
        <p id= "notice" ></p>
        <h1 class= "main-visual-title" >Books</h1>
        <table class="main-table" >
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Body</th>
                    <th colspan="3"></th>
                </tr>
            </thead>
            
            <tbody>
                
                <% @blogs.each do |blog|%>
                <tr>
                    <td><%= blog.title %></td>
                    <td><%= blog.body %></td>
                    <td>
                        <%#= link_to "Show", blog_path(@blog) %>
                        <%#= link_to "Edit", edit_blog_path(@blog) %>
                        <%#= link_to "Destroy", blog_path(@blog), method: :delete, "data-confirm" => "Are you sure?" %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
        
        <h2 class="main-visual-title2" >New book</h2>
        
        <%# if @blog.errors.any? %>
        
        <%= form_with model:@nblog, local:true do |f| %>
            <h4>Title</h4>
            <%= f.text_field :title %>
            
            <h4>Body</h4>
            <%= f.text_area :body %>
            
            <%= f.submit 'Create Book' %>
            
        <% end %>
    </div>
</body>

