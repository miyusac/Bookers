<%#編集画面の作成%>

<body>
    <div class="main-visual">
        <h1 class="main-visual-title">Editing Book</h1>
        
        <% if @blog.errors.any? %>
            <%= @blog.errors.count %>
            <% @blog.errors.full_messages.each do |message| %>
                <%= message %>
            <% end %>
        <% end %>
        
        <%= form_with model:@blog, local:true do |f| %>
            <h4>Title</h4>
            <%= f.text_field :title %>
            <h4>Body</h4>
            <%= f.text_area :body %>
            
            <%=f.submit 'Update Book' %>
        <% end %>
        
        <%= link_to "Show", blog_path(@blog[:id]) %>
         | 
        <%= link_to "Back", new_blog_path %>
    </div>
</body>
